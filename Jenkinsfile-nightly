 boolean isBranchIndexingCause() {
    def isBranchIndexing = false
//    if (!currentBuild.rawBuild) {
//      return true
//    }

    currentBuild.getBuildCauses().each { cause ->
      if (cause instanceof jenkins.branch.BranchIndexingCause) {
        isBranchIndexing = true
      }
    }
    return isBranchIndexing
  }

pipeline {
    agent any

    stages {
        stage('Nightly') {
            when {
                expression { isBranchIndexingCause() }
            }
            steps {
                echo 'Nightly Build ...'
            }
        }
    }

    post {
        success {
            githubNotify description: 'Nightly Build', context: 'continuous-integration/jenkins/nightly',  status: 'SUCCESS'
        }
        failure {
            githubNotify description: 'Nightly Build', context: 'continuous-integration/jenkins/nightly',  status: 'FAILURE'
        }
    }
}
